{
  "compilerOptions": {
    "lib": [
      "ES2019"
    ],
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "build",
    "strict": true,
    "types": ["node", "jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "jest.setup.ts",
    "migrations/*.ts"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}